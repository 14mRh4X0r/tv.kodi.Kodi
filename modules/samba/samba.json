{
    "name": "samba",
    "buildsystem": "simple",
    "build-commands": [
        "./buildtools/bin/waf configure --prefix=/app --disable-python --without-ad-dc --without-acl-support --without-ldap --without-ads --without-pam --without-systemd",
        "./buildtools/bin/waf build -j $FLATPAK_BUILDER_N_JOBS",
        "./buildtools/bin/waf install"
    ],
    "cleanup": [
        "/bin",
        "/lib/python2.7",
        "/libexec",
        "/share",
        "/include",
        "/lib/*.so"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://download.samba.org/pub/samba/stable/samba-4.13.4.tar.gz",
            "sha256": "a1b34c63f7100cc8626902d80f335c7cb0b45d4707dd3c4b010f7a28ed615c78"
        }
    ]
}
